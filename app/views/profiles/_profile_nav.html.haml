- if @profile && @no_nav == nil
  .row-fluid
    .span12
      .profile-nav
        .row-fluid
          .span6
            %h1
              = link_to @profile.user_name , @profile if @profile.user_name
.row-fluid
  .span12.cover-image
    = image_tag(@profile.cover_image_url(:cover)) if @profile.cover_image_url
    - if @profile.image_url
      = image_tag(@profile.image_url(:thumb), class: "profile-img img-polaroid")
    - else
      = image_tag('user.png', class: "profile-img img-polaroid")
    /= link_to "Borítókép hozzáadása", "#", class: "btn pull-right cover-image-link" if own_profile?(@profile)
    /= image_tag(image_profile_path(@profile), :alt => "Avatar") if @profile.image?

.row-fluid
  .span12
    %ul.nav.nav-tabs.ul-profile-nav2
      %li{:class => "#{"active" if current_page?(@profile)}", id: "profile-link"}
        = link_to "Profil", @profile
      %li{:class => "#{"active" if current_page?(profile_photos_path(@profile))}", id: "photos-link"}
        = link_to "Fényképek", profile_photos_path(@profile)

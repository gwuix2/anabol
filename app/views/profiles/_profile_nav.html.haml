- if @profile && @no_nav == nil
  .row-fluid
    .span12.bottom-line
      %h2
        = link_to "/" + @profile.user_name , @profile if @profile.user_name
        .pull-right
          - if own_profile?(@profile)
            .btn-toolbar
              .btn-group
                = link_to "+", new_profile_workout_path(@profile), class: "btn btn-primary", id: "new-workout", remote: true
                = link_to "edzéseim", profile_workouts_path(@profile), class: "btn"
              .btn-group
                = link_to "+", new_profile_size_path(@profile), class: "btn btn-primary", id: "new-size", remote: true
                = link_to "méréseim", profile_sizes_path(@profile), class: "btn"
              .btn-group
                = link_to edit_profile_path(current_user.profile) do
                  .btn{title: "Profilod beállításai"}
                    %i.icon-wrench
#workout-form
  .row-fluid
    .span12
#size-form
  .row-fluid
    .span12
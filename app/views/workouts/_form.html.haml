#wf
  .row-fluid
    .span8.offset2
      .padding-top
        = simple_form_for([@profile, @workout], :html => { :class => 'form-horizontal' }) do |f|
          = f.error_notification
        
          .form-inputs
            = f.input :name, required: true, label: "Edzés neve"
            .datetime.input-append
              = f.input :mikor, required: true, :label => "Edzés ideje", :wrapper => :append do
                = f.input_field :mikor, :as => :string, "data-format" => "yyyy/MM/dd hh:mm:ss" 
                %span.add-on
                  %i{"data-date-icon" => "icon-calendar", "data-time-icon" => "icon-time"}
            = f.input :period_time, label: "Időtartam - percben"
            .row-fluid
              .span3
                = f.input :color, priority: "fehér", collection: [ "fehér", "kék", "fekete", "piros", "sárga", "zöld" ], label: "Jelölőszín", as: :radio_buttons
            /= f.input :template, label: "Mentés sablonként"
            = f.input :description, label: "Edzés leírása", input_html: { class: 'span10' }
        
          .form-actions
            = f.button :submit, "Mentés", class: "btn btn-primary btn-large"
            = link_to "Mégse", "#", class: "btn btn-large", id: "close-workout"


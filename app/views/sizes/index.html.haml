          %tr
            %td
              %small
                = ido(size.created_at) if size.created_at
            %td
              = size.mikor
            %td
              = size.testsuly
            %td
              = size.testzsir
            %td
              = size.nyak
            %td
              = size.mell
            %td
              = size.vall
            %td
              = size.kar
            %td
              = size.alkar
            %td
              = size.derek
            %td
              = size.csipo
            %td
              = size.comb
            %td
              = size.vadli
.row-fluid
  .span10.offset1
    %table.datatable
      %thead
        %tr
          %th Létrehozva
          %th Mérés dátuma
          %th Testsúly
          %th Testzsír
          %th Nyak
          %th Mell
          %th Váll
          %th Kar
          %th Alkar
          %th Derék
          %th Csípő
          %th Comb
          %th Vádli
      %tbody

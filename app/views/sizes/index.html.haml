- provide(:title, "Méréseim")
%br/
.row
  .small-12.columns
    %table.datatable
      %thead
        %tr
          %th Létrehozva
          %th Mérés dátuma
          %th Testsúly
          %th Testzsír
          %th Nyak
          %th Mell
          %th Váll
          %th Kar
          %th Alkar
          %th Derék
          %th Csípő
          %th Comb
          %th Vádli
          %th
      %tbody
        - @sizes.each do |size|
          %tr
            %td
              %small
                = ido(size.created_at) if size.created_at
            %td
              = size.mikor
            %td
              = size.testsuly
            %td
              = size.testzsir
            %td
              = size.nyak
            %td
              = size.mell
            %td
              = size.vall
            %td
              = size.kar
            %td
              = size.alkar
            %td
              = size.derek
            %td
              = size.csipo
            %td
              = size.comb
            %td
              = size.vadli
            %td
              = link_to  edit_profile_size_path(@profile, size) do
                %i.general.foundicon-edit
              = link_to  profile_size_path(@profile, size), method: :delete, confirm: "Biztos vagy benne?" do
                %i.general.foundicon-trash
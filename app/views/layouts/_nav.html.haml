%header.navbar.navbar-fixed-top
  %nav.navbar-inner.navbar-custom
    .container
      / .btn-navbar is used as the toggle for collapsed navbar content
      %a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      / Be sure to leave the brand out there if you want it shown
      = link_to  'Anabolizmus', root_path, class: "brand"
      / Everything you want hidden at 940px or less, place within here
      .nav-collapse.collapse
        %ul.nav.pull-right
          - unless user_signed_in?
            %li{:class => "#{'active' if current_page?(new_user_session_path)}"}
              = link_to "Belépés", new_user_session_path
          - else
            %li.dropdown
              %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
                %i.icon-user
                = current_user.profile.name
              %ul.dropdown-menu{"aria-labelledby" => "dLabel", :role => "menu"}
                %li
                  = link_to "Profilom", root_path
                %li
                  = link_to "Beállítások", edit_profile_path(current_user.profile)
                %li.divider
                %li
                  = link_to "Kilépés", destroy_user_session_path, method: :delete

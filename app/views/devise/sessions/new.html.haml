%h2 Belépés
= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
  .form-inputs
    = f.input :email, :required => false, :autofocus => true
    = f.input :password, :required => false, label: "Jelszó"
    = f.input :remember_me, :as => :boolean, label: "Emlékezz rám!" if devise_mapping.rememberable?
  .form-actions
    = f.button :submit, "Belépés", class: "btn btn-primary btn-large"
= render "devise/shared/links"